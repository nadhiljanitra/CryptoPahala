<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

  <link href="https://fonts.googleapis.com/css?family=Rubik:300&display=swap" rel="stylesheet">
  <link rel="shortcut icon" type="image/ico" href="/static/img/logo-blue.png"/>
<style>


</style>

  <title>Profile Page - Cryptopahala</title>  
</head>
<body>
  <div class="jumbotron bg-primary text-white">
    <div class="container">
      <div class="row">
        <div class="col-sm float-left">
            <h2> Halo <%= data.dataValues.username%>! </h2>
        </div>
        <div class="col-sm float-right">
            <div class="dropdown show bg-success">
                <a class="btn btn-secondary dropdown-toggle float-right" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  Profile
                </a>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                  <a class="dropdown-item" href="/profile/<%= profileId %>/updateProfile">update profile</a>
                  <a class="dropdown-item" href="/profile/<%= profileId %>/deleteProfile">delete account</a>
                  <a class="dropdown-item" href="/profile/logout">logout</a>
                </div>
            </div>
        </div>
      </div>
    </div> 
</div>

  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col" class="text-center">No</th>
        <th scope="col">Perbuatan</th>
        <th scope="col">Opsi</th>
      </tr>
    </thead>
    <%let score = 0 %>
    <% data.dataValues.Deeds.forEach((element,index) => { %>
    <tr sscope="row">
      <td class="text-center">
        <%= index+1 %>.
      </td>
      <td>
        <%= element.dataValues.name%>
      </td>
      <td>
        <a href="/profile/<%= profileId %>/userpage/delete/<%= element.dataValues.id%>">Delete</a>
      </td>
    </tr>
    <% score += element.dataValues.rating%>
    <% });%>
  </table>
    
    <div class="text-center">
      <p>Total score anda adalah</p>
      <h1><%= score%></h1>
    </div>

    <div class="container" style="margin-top: 30px">
      <div class="row">
          <div class="col-sm">
            <a class="btn btn-primary " role="button" href="/profile/<%= profileId %>/addDeed">Tambah Perbuatan Baru</a>
          </div>
          <div class="col-sm">
              <a class="btn btn-primary" href="/chart/leaderboard" role="button">Leaderboard</a>
          </div>
          <div class="col-sm">
              <a class="btn btn-primary" href="/chart/frequencyofdeeds" role="button">Deeds Frequency Chart</a>
          </div>
        </div>
    </div>

 
  
</body> 
</html>